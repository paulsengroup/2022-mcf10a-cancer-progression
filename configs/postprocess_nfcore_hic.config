params {
    data_dir = 'data'
    nfcore_stage_dirs = "${data_dir}/scratch/nfcore_hic/*/"

    grch38_assembly_name_short = 'GRCh38'
    fasta = "${data_dir}/output/preprocessing/assemblies/${grch38_assembly_name_short}_genome_assembly.fna"
    assembly_gaps = "${data_dir}/input/GRCh38_assembly_gaps.txt.gz"
    cytoband = "${data_dir}/input/GRCh38_cytoband.txt.gz"

    output_dir = "${data_dir}/output/nfcore_hic"
}

process {
    container = 'ghcr.io/paulsengroup/2022-mcf10a-cancer-progression/utils:1.0.1'
    withName:multiqc {
        container = 'ghcr.io/ewels/multiqc:v1.13'
    }
    withName:generate_blacklist {
        container = 'ghcr.io/paulsengroup/2022-mcf10a-cancer-progression/bedtools:2.30.0'
    }
    withName:cooler_merge {
        container = 'ghcr.io/paulsengroup/2022-mcf10a-cancer-progression/cooltools:0.5.2'
    }
    withName:cooler_zoomify {
        container = 'ghcr.io/paulsengroup/2022-mcf10a-cancer-progression/cooltools:0.5.2'
    }
    withName:compress_bwt2pairs {
        container = 'ghcr.io/paulsengroup/2022-mcf10a-cancer-progression/samtools:1.16.1'
    }
}

singularity {
    cacheDir = 'containers/cache'
    enabled = true
    autoMounts = true
}
