params {
    data_dir = 'data'

    input = "${data_dir}/input/nfcore_chipseq_gh2ax_samplesheet.csv"
    outdir = "${data_dir}/output/nfcore_chipseq/gh2ax"
    fasta = "${data_dir}/output/preprocessing/assemblies/hg38_genome_assembly.fna"
    gtf = "${data_dir}/output/preprocessing/annotations/hg38_gencode_v43.gtf"
    macs_gsize = 2708135512  // Computed with unique-kmers.py from khmer v2.1.1 (using -k 50)

    schema_ignore_params = 'data_dir,clusterOptions,project'
}


singularity {
    cacheDir = 'containers/cache'
    enabled = true
    autoMounts = true
}
