params {
    data_dir = 'data'
    mcools = "${data_dir}/output/nfcore_hic/mcools/*_merged.mcool"
    tads = "${data_dir}/output/tad_analysis/*_merged_domains.bed.gz"

    cytoband = "${data_dir}/input/GRCh38_cytoband.txt.gz"
    assembly_gaps = "${data_dir}/input/GRCh38_assembly_gaps.txt.gz"

    outdir = "${data_dir}/output/cliques/"
}

singularity {
    cacheDir = 'containers/cache'
    enabled = true
    autoMounts = true
}
