params {
    data_dir = 'data'
    sample_sheet = "${data_dir}/input/call_tad_cliques_samplesheets/call_tad_cliques_samplesheet.tsv"

    cytoband = "${data_dir}/input/GRCh38/GRCh38_cytoband.txt.gz"
    assembly_gaps = "${data_dir}/input/GRCh38/GRCh38_assembly_gaps.txt.gz"

    clique_size_thresh = 5

    outdir = "${data_dir}/output/cliques/"
}

singularity {
    cacheDir = 'containers/cache'
    enabled = true
    autoMounts = true
}
