params {
    data_dir = 'data'
    input_dir = "${data_dir}/input"
    output_dir = "${data_dir}/output/diff_expression_analysis"
    script_dir = '/scripts'

    control_to_sample_mappings = "${data_dir}/input/control_to_sample_mappings.tsv"
    gene_count_matrix = "${data_dir}/output/nfcore_rnaseq/star_salmon/salmon.merged.gene_counts.tsv"
    transcript_count_matrix = "${data_dir}/output/nfcore_rnaseq/star_salmon/salmon.merged.transcript_counts.tsv"

    elixir_gost_lfc_lb = -2.0
    elixir_gost_lfc_ub = 2.0
    elixir_gost_pval = 0.05
}

process {
    container = 'ghcr.io/paulsengroup/2022-mcf10a-cancer-progression/diff_expression_analysis:1.0.0'
}

singularity {
    cacheDir = 'containers/cache'
    enabled = true
    runOptions = "-B ${launchDir}/scripts:${params.script_dir}:ro"
}
