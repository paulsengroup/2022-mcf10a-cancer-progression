params {
    data_dir = 'data'

    input = "${data_dir}/input/nfcore_chipseq_samplesheets/nfcore_chipseq_p53_samplesheet.csv"
    outdir = "${data_dir}/output/nfcore_chipseq/p53"
    fasta = "${data_dir}/output/preprocessing/assemblies/hg38_genome_assembly.fna"
    gtf = "${data_dir}/output/preprocessing/annotations/hg38_gencode_v43.gtf"
    macs_gsize = 2802903967  // Computed with unique-kmers.py from khmer v2.1.1 (using -k 80)

    narrow_peak = false  // true TODO: investigate why the workflow fails when passing true

    schema_ignore_params = 'data_dir,clusterOptions,project'
}


singularity {
    cacheDir = 'containers/cache'
    enabled = true
    autoMounts = true
}
