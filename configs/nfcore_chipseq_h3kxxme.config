params {
    data_dir = 'data'

    input = "${data_dir}/input/nfcore_chipseq_h3kxxme_samplesheet.csv"
    outdir = "${data_dir}/output/nfcore_chipseq/h3kxxme"
    genome = 'hg38'
    macs_gsize = 2630101543  // Computed with unique-kmers.py from khmer v3.0.0a3 (using -k 40)

    schema_ignore_params = 'data_dir,clusterOptions,project'
}



singularity {
    cacheDir = 'containers/cache'
    enabled = true
    autoMounts = true
}

