params {
    data_dir = 'data'
    input_dir = "${data_dir}/output/cliques/merged"
    output_dir = "${data_dir}/output/cliques/merged"

    cliques_cis_merged = [
        ['MCF10A_WT', "${input_dir}/cliques/hg38_001_MCF10A_WT_cis_cliques.tsv.gz"],
        ['MCF10A_T1', "${input_dir}/cliques/hg38_002_MCF10A_T1_cis_cliques.tsv.gz"],
        ['MCF10A_C1', "${input_dir}/cliques/hg38_003_MCF10A_C1_cis_cliques.tsv.gz"]
    ]

    domains_cis_merged = [
        ['MCF10A_WT', "${input_dir}/cliques/hg38_001_MCF10A_WT_cis_domains.bed.gz"],
        ['MCF10A_T1', "${input_dir}/cliques/hg38_002_MCF10A_T1_cis_domains.bed.gz"],
        ['MCF10A_C1', "${input_dir}/cliques/hg38_003_MCF10A_C1_cis_domains.bed.gz"]
    ]

    labels_merged = ['MCF10A', 'MCF10AT1', 'MCF10CA1a']

    mask = "${data_dir}/input/translocations/hg38_MCF10A_merged_translocations.bed"
}

process {
    container = 'ghcr.io/paulsengroup/2022-mcf10a-cancer-progression/plotting:1.0.0'
}
