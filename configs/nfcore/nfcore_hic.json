{
    "input": "data/input/nfcore_hic_samplesheet.csv",
    "outdir": "data/scratch/nfcore_hic",
    "fasta": "data/output/preprocessing/assemblies/hg38_genome_assembly.fna",
    "chromosome_size": "data/output/preprocessing/chrom_sizes/GRCh38.chrom.sizes",
    "restriction_site": "^GATC,G^ANTC",
    "ligation_site": "GATCGATC,GANTGATC,GANTANTC,GATCANTC",
    "bin_size": "1000000",
    "bin_size_comment_": "Workflow does not respect --skip_maps and skip_mcool params, so we specify a high resolution, so that generating .mcool files doesn't take too long.",
    "skip_maps": true,
    "skip_dist_decay": true,
    "skip_tads": true,
    "skip_compartments": true,
    "skip_balancing": true,
    "skip_mcool": true,
    "split_fastq": false,
    "schema_ignore_params": "bin_size_comment_,cluster-options,clusterOptions,genomes,project"
}
