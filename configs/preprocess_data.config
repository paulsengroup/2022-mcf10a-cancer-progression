params {
    data_dir = 'data'
    input_dir = "${data_dir}/input"
    output_dir = "${data_dir}/output/preprocessing"
    script_dir = '/scripts'

    grch38_assembly_name_short = 'GRCh38'
    grch38_assembly_name = "${grch38_assembly_name}.p14"
    grch38_assembly_name_long = "GCF_000001405.40_${grch38_assembly_name}"

    grch38_assembly_report = "${input_dir}/${grch38_assembly_name_short}_assembly_report.txt.gz"
    grch38_genome_assembly = "${input_dir}/${grch38_assembly_name_short}_genome_assembly.fna.gz"
}

process {
    container = 'ghcr.io/paulsengroup/2022-david-hic/utils:1.0.1'
    withName:run_bowtie2_index {
        container = 'nfcore/hic:1.3.0'
    }
}

singularity {
    cacheDir = 'containers/cache'
    enabled = true
    runOptions = "-B ${launchDir}/scripts:${params.script_dir}:ro"
}
